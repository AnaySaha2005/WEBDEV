
<style>
    img{
        height: 15rem;
        width: 20rem ;
    }
   
</style>
<% layout("./layouts/boilerplate.ejs")%>

<body>
    <h1>All Listings</h1>
    <div class="row row-cols-md-3 row-cols-sm-1">
        <%for(listing of allListings){%>
            <a href="/listings/<%=listing._id%>">
                <div class="card col">
                    <img src=<%=listing.image%> class="card-img-top" >
                    <div class="card-body">
                      <p class="card-text">
                       <b><%= listing.title %></b> 
                        <br>
                        &#8377;<%= listing.price %>/night
                    </p>
                    </div>
                  </div>
            </a>
       <% }%>
    </div>
 
</body>
