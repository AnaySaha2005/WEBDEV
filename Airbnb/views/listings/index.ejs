<style>
  img {
    height: 15rem;
    width: 20rem;
  }
  #filters {
    display: flex;
    flex-wrap: nowrap;

  }
  .filter {
    text-align: center;
    margin-right: 1.5rem;
    margin-top: 1rem;
    opacity: 0.7;
    margin-left: 2rem;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
   font-size: 0.8rem;
  }
  .tax-toggle{
    white-space: nowrap;
    margin-top: 1rem;
    font-size: 0.9rem;
    padding: 10px 10px 10px 10px;
    border-radius: 30px;
    transition-duration: 0.7s;
    border: 2px solid rgb(129, 129, 129);

  }
  @media(max-width:1200px){
    .tax-toggle{
      display: none;
    }
  }
  .gst{
    display: none;
  }
</style>
<% layout("./layouts/boilerplate.ejs")%>

<body>
</div>
  <!-- <h1>All Listings</h1> -->
  <div id="filters">
    <div class="filter">
      <div>
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-city"></i>
        <p>Iconic Cities</p>
      </div>
    </div>

    <div class="filter">
      <div>
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castle</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beach Vibes</p>
      </div>
    </div>

    <div class="filter">
      <div>
        <i class="fa-solid fa-mountain-sun"></i>
        <p>Nature</p>
      </div>
    </div>

    <div class="filter">
      <div>
        <i class="fa-solid fa-person-swimming"></i>        <p>Awesome pools</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-gem"></i>
         <p>Luxy</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-tower-observation"></i>
        <p>Amazing view</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-person-skiing"></i>
        <p>Skiing</p>
      </div>
    </div>
    <div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display with taxes</label>
        </div>
      </div>
    </div>
   
  </div>
  <div class="container">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 mt-3">
    <%for(listing of allListings){%>
    <a href="/listings/<%=listing._id%>">
      <div class="listcard card col">
        <img src="<%=listing.image.url %>" class="card-img-top" />
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            <p class="nogst">&#8377;<%= listing.price %>/night</p>
            <p class="gst">&#8377;<%= listing.price*1.18%>/night.</p>
          </p>
        </div>
      </div>
    </a>
    <% }%>
  </div>
</body>
<script>
  let gstcol=document.querySelectorAll(".gst")
  let nogstcol=document.querySelectorAll(".nogst")
  let taxtoggler=document.querySelector("#flexSwitchCheckDefault")
  taxtoggler.addEventListener("click",()=>{
    console.log(taxtoggler.checked)
   if(taxtoggler.checked){
    for(gst of gstcol)
    gst.style.display="block";
    for(nogst of nogstcol)
    nogst.style.display="none";
   }
   if(!taxtoggler.checked){
    for(gst of gstcol)
    gst.style.display="none";
    for(nogst of nogstcol)
    nogst.style.display="block";
   }
   
  })
</script>